@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    string ApiUrl = "https://localhost:7255/wwwroot/upload";
}

@functions {
    public string AliasImage(string UrlImage)
    {
        //console.log(title)

        var slug = UrlImage.ToLower();

        slug = slug.Replace("/.png /", "");
        slug = slug.Replace("/.jpg/", "");
        slug = slug.Replace("/.jpeg /", "");
        return slug;
    }
}


<!--Banner-->
<div class="container-fluid homesite">
    <div class="banner-wrapper">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>

            </div>
            <div class="carousel-inner h-auto">
                <div class="carousel-item active">
                    <img src="@ApiUrl/image/banner/home1.jpg" class="d-block w-100 h-25" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@ApiUrl/image/banner/home2.jpg" class="d-block w-100 h-25" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <div class="banner-message">
                <h4>Welcome</h4>
            </div>
        </div>
    </div>

    <!--4 ser-->
    <div id="four" class="row pt-2 my-2 ms-5">
        <div class="col medium6 small-12 large-3">
            <div class="d-flex w-100">
                <div>
                    <img width="50" height="50" src="@ApiUrl/image/4-images/free.png"" alt=""></img>
                </div>
                <div class="ms-3">
                    <h5 class="mt-1 mb-0">Free Ship</h5>
                    <p>Free ship for all order</p>
                </div>
            </div>
        </div>
        <div class="col medium6 small-12 large-3">
            <div class="d-flex w-100">
                <div>
                    <img width="50" height="50" src="@ApiUrl/image/4-images/24.png" alt=""></img>
                </div>
                <div class="ms-3">
                    <h5 class="mt-1 mb-0">Support 24/7</h5>
                    <p>Support 24/7 per day</p>
                </div>
            </div>
        </div>
        <div class="col medium6 small-12 large-3">
            <div class="d-flex w-100">
                <div>
                    <img width="50" height="50" src="@ApiUrl/image/4-images/payback.png" alt="">
                </div>
                <div class="ms-3">
                    <h5 class="mt-1 mb-0">Payback</h5>
                    <p>Payback</p>
                </div>
            </div>
        </div>
        <div class="col medium6 small-12 large-3">
            <div class="d-flex w-100">
                <div>
                    <img width="50" height="50" src="@ApiUrl/image/4-images/dis.png" alt="">
                </div>
                <div class="ms-3">
                    <h5 class="mt-1 mb-0">Discount</h5>
                    <p>Discount</p>
                </div>
            </div>
        </div>
    </div>

    <!--Product-->
    <div class="product-section section-padding" style="justify-content:center">
        <h2 class="title-bg-gray">Products</h2>

        <div class="container">
            <div class="row" style="justify-content:center">
                @foreach (var product in @Model.productsNew.products)
                {
                    <div class="card text-center col-lg-3 col-md-3 mb-2 m-2" style="width:20%">
                        <a asp-page="Detail" asp-route-id="@product.Id" style="text-decoration:none">
                            <img src="@ApiUrl/image/product/@product.Images.FirstOrDefault().Url" class="card-img-top">
                            <div class="card-body">
                                <h5 style="color:black" class="card-title">@product.ProductName</h5>
                                <h6 style="color:#F5A623">@product.Price₫</h6>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        @* <div class="mt-3">
        <a href="/home/product" id="more">More Products</a>
        </div>*@
    </div>

    <!--slogan-->
    <div class="container-fluid slogan">
        <p class="container">Flowers are the art of world</p>
    </div>



</div>
